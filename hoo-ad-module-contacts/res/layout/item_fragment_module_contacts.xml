<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <LinearLayout
        android:id="@+id/item_module_contacts_letter_area" 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone"
        >
        <TextView
            android:id="@+id/item_module_contacts_letter" 
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:paddingLeft="10dip"
	        android:paddingTop="5dip"
	        android:paddingBottom="5dip"
	        />
		<View 
		    android:layout_width="match_parent"
		    android:layout_height="0.5dip"
		    android:background="@color/module_contacts_devide_line"
		    />
    </LinearLayout>
    
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/selector_module_contcats_item"
        android:orientation="horizontal"
        android:paddingLeft="10dip"
        android:paddingTop="5dip"
        android:paddingBottom="5dip"
        >
        <ImageView
            android:id="@+id/item_module_contacts_headimg" 
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:scaleType="fitXY"
            android:src="@drawable/ic_launcher"
            android:contentDescription="@null"
            />
        
        <TextView
            android:id="@+id/item_module_contacts_name" 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_gravity="center_vertical"
            android:singleLine="true"
            android:ellipsize="end"
            android:layout_marginLeft="5dp"
            />
    </LinearLayout>
    
</LinearLayout>
