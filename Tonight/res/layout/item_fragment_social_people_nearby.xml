<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="10dp"
    android:paddingBottom="10dp"
    android:orientation="horizontal" >
    
    <ImageView
        android:id="@+id/social_people_nearby_head"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:src="@drawable/default_head"
        />
	<RelativeLayout
	    android:layout_width="match_parent"
	    android:layout_height="56dp"
	    android:layout_marginLeft="8dp"
	    >
        <LinearLayout 
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <TextView
		        android:id="@+id/social_people_nearby_username"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_marginLeft="2dp"
		        android:layout_marginRight="2dp"
		        android:singleLine="true"
		        android:ellipsize="end"
		        android:textSize="18sp"
		        android:textColor="#FFE64087"
		        />
            <TextView
                android:id="@+id/social_people_nearby_age" 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:paddingLeft="4dp"
                android:paddingRight="4dp"
                android:background="@drawable/shape_module_sex_male"
                android:layout_marginLeft="10dp"
                android:textSize="9sp"
                />
            <View android:layout_width="0dip" android:layout_height="0dip" android:layout_weight="1.0"/>
		    <TextView
		        android:id="@+id/social_people_nearby_distance" 
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:singleLine="true"
		        android:textSize="10sp"
		        android:textColor="#FF9B9B9B"
		        ></TextView>
        </LinearLayout>
	    <TextView 
	        android:id="@+id/social_people_nearby_content"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:singleLine="true"
	        android:ellipsize="end"
	        android:textSize="15sp"
	        android:textColor="@color/white"
	        android:layout_alignParentBottom="true"
	        />
	</RelativeLayout>
</LinearLayout>
