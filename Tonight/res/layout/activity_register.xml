<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#270544"
    android:orientation="vertical" >

    <include
        android:id="@+id/login_header"
        layout="@layout/include_header" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/login_header"
        android:orientation="vertical" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingLeft="10dip"
                android:paddingRight="10dip"
                android:paddingTop="@dimen/x200" >

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical" >

                     <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="@dimen/x30"
                    android:gravity="center"
                    android:orientation="vertical" >

                    <EditText
                        android:id="@+id/register_et_account"
                        android:layout_width="@dimen/x500"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dip"
                        android:gravity="center"
                        android:background="@null"
                        android:hint="请输入手机号码"
                        android:inputType="text"
                        android:singleLine="true" />
                    
                    <View
                        android:layout_width="@dimen/x500"
                        android:layout_height="@dimen/x1"
                        android:background="#1A032D"
                         >
                        </View>
                    </LinearLayout>
                    
                    
                     
                       <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:paddingTop="@dimen/x30"
                    android:orientation="vertical" >
                    <EditText
                        android:id="@+id/register_et_pwd"
                        android:layout_width="@dimen/x500"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dip"
                        android:background="@null"
                        android:gravity="center"
                        android:hint="请输入密码"
                        android:imeOptions="actionDone"
                        android:inputType="textPassword"
                        android:singleLine="true" />
                    
                    <View
                        android:layout_width="@dimen/x500"
                        android:layout_height="@dimen/x1"
                        android:background="#1A032D"
                         >
                        </View>
                    </LinearLayout>

                      <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:paddingTop="@dimen/x30"
                    android:orientation="vertical" >
                    <EditText
                        android:id="@+id/re_et_pwd"
                        android:layout_width="@dimen/x500"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dip"
                        android:gravity="center"
                        android:background="@null"
                        android:hint="请确认密码"
                        android:imeOptions="actionDone"
                        android:inputType="textPassword"
                        android:singleLine="true" />
                    
                    <View
                        android:layout_width="@dimen/x500"
                        android:layout_height="@dimen/x1"
                        android:background="#1A032D"
                         >
                        </View>

                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="@dimen/x700"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:paddingLeft="10dip"
                    android:paddingRight="10dip"
                    android:paddingTop="@dimen/x50" >

                       
                    <EditText
                        android:id="@+id/login_btn_login"
                        android:layout_width="@dimen/x200"
                        android:layout_height="@dimen/x90"
                        android:gravity="center"
                        android:background="@drawable/bt_lianxi_bg"
                        android:text="输入验证码"
                        android:layout_marginRight="@dimen/x20"
                        android:textSize="@dimen/x40" />

                    <Button
                        android:layout_width="@dimen/x200"
                        android:layout_height="@dimen/x90"
                        android:background="@drawable/bt_lianxi_bg"
                        android:layout_marginLeft="@dimen/x20"
                        android:text="获取验证码"
                        android:textSize="@dimen/x30" />

                </LinearLayout>
                
                 <Button
                        android:layout_width="@dimen/x300"
                        android:layout_height="@dimen/x90"
                        android:background="@drawable/bt_lianxi_bg"
                        android:layout_marginTop="@dimen/x130"
                        android:text="立即进入"
                        android:textSize="@dimen/x30" />
            </LinearLayout>
    </LinearLayout>

</RelativeLayout>