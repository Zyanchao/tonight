<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl"
    android:layout_width="match_parent"
    android:layout_height="@dimen/x360"
    android:background="#ffffff"
    android:minHeight="@dimen/x360" >

    <ImageView
        android:id="@+id/kc_Img"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x360"
        android:scaleType="fitXY"
        android:src="@drawable/kc_picture" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/x360"
        android:background="#26000000"
        android:layout_marginTop="@dimen/x90" 
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/tv_describe"
            style="@style/text_shadow_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/x30"
            android:singleLine="true"
            android:text="健身教练私教课健身教练私教课"
            android:textColor="#ffffff"
            android:textSize="@dimen/x30" />

    </LinearLayout>

        <RelativeLayout
            android:id="@+id/rl_heart"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/x30" >
            
            
            
            <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/x40"
            android:paddingLeft="@dimen/x30"
            android:singleLine="true"
            android:text="健身教练私教课"
            style="@style/text_shadow_style"
            android:textColor="#ffffff" />
            
            
        </RelativeLayout>
        
        
        
         <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/x250" >
            
        </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/x300"
        android:orientation="horizontal" >

        <RelativeLayout
            android:id="@+id/rl_distance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x30"
            android:background="@drawable/bg_promention_distance"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/tv_distance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/x20"
                android:paddingRight="@dimen/x20"
                android:drawableLeft="@drawable/toutiao_location1"
                android:drawablePadding="@dimen/x10"
                android:textSize="@dimen/x30"
                style="@style/text_shadow_style"
                android:text="2.1km"
                android:textColor="#ffffff" />
        </RelativeLayout>


        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/tv_charge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/x16"
                android:background="@drawable/bg_promention_price"
                android:shadowColor="#ff0000ff"
                android:shadowDy="3"
                android:gravity="center"
                android:text="120元/小时"
                android:paddingLeft="@dimen/x15"
                android:paddingRight="@dimen/x15"
                android:paddingTop="@dimen/x5"
                android:paddingBottom="@dimen/x5"
                android:textColor="#000000"
                android:textSize="@dimen/x27" />
        </RelativeLayout>
    </RelativeLayout>

</RelativeLayout>